<% if current_admin? %>
  <h3><%= "Update #{@recipe_ingredient.ingredient.name} for #{@recipe.title}" %></h3>
  <%= form_for [:admin, @recipe, @recipe_ingredient] do |f| %>
    <p><%= f.label :ingredient %></p>
    <p><%= f.collection_select :ingredient_id, @ingredients, :id, :name %></p>
    <p><%= f.label :quantity %></p>
    <p><%= f.text_field :quantity %></p>
    <p><%= f.label :measurement %></p>
    <p><%= f.select :measurement, options_for_select(['count', 'cloves', 'tsp', 'tbsp', 'oz', 'lbs', 'oz', 'cup', 'other']) %></p>
    <p><%= f.submit 'Update Ingredient' %></p>
  <% end %>
<% end %>
