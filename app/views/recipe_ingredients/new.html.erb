<h3>Adding ingredients to <%= @recipe.title %></h3>
<%= form_for [@recipe, @recipe_ingredient] do |f| %>
  <p><%= f.label :ingredient %></p>
  <p><%= f.collection_select :ingredient_id, @ingredients, :id, :name %></p>
  <p><%= f.label :quantity %></p>
  <p><%= f.number_field :quantity %></p>
  <p><%= f.label :measurement %></p>
  <p><%= f.select :measurement, options_for_select(['count', 'cloves', 'tsp', 'tbsp', 'oz', 'lbs', 'oz', 'c', 'other']) %></p>
  <p><%= f.submit 'Add Ingredient' %></p>
<% end %>
<%= button_to 'Create New Ingredient', new_ingredient_path %>
<%= link_to 'Done Adding Ingredients', recipe_path(@recipe) %>
