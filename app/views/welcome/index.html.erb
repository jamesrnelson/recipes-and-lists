<div id="content">
  <div class="slideshow-container">

    <div class="mySlides fade">
      <div class="numbertext">1 / 3</div>
      <%= link_to image_tag(asset_path (@random_recipes[0].image), width:100 ), "/search/#{@random_recipes[0].spoonacular_id}" %>
      <div class="text"><%= "#{@random_recipes[0].title} by #{@random_recipes[0].source_name}" %></div>
    </div>

    <div class="mySlides fade">
      <div class="numbertext">2 / 3</div>
      <%= link_to image_tag(asset_path (@random_recipes[1].image), width:100 ), "/search/#{@random_recipes[1].spoonacular_id}" %>
      <div class="text"><%= "#{@random_recipes[1].title} by #{@random_recipes[1].source_name}" %></div>
    </div>

    <div class="mySlides fade">
      <div class="numbertext">3 / 3</div>
      <%= link_to image_tag(asset_path (@random_recipes[2].image), width:100 ), "/search/#{@random_recipes[2].spoonacular_id}" %>
      <div class="text"><%= "#{@random_recipes[2].title} by #{@random_recipes[2].source_name}" %></div>
    </div>

    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>
  <br>

  <div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
  </div>

</div>
